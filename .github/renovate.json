{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>timesink-dev/.github"],
  "enabledManagers": ["mix"],
  "packageRules": [
    {
      "matchManagers": ["mix"],
      "groupName": "Elixir Dependencies",
      "schedule": ["weekly"]
    },
    {
      "matchManagers": ["mix"],
      "matchPackagePatterns": ["ecto", "phoenix", "plug"],
      "groupName": "Core Phoenix Dependencies",
      "schedule": ["weekly"]
    },
     {
      "matchManagers": ["mix"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "rebaseWhen": "never",
  "ignorePaths": ["**/node_modules/**"]
}
