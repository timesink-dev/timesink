{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>timesink-dev/.github"],
  "enabledManagers": ["mix", "npm"],
  "packageRules": [
    {
      "matchManagers": ["mix"],
      "groupName": "Elixir Dependencies"
    },
    {
      "matchManagers": ["mix"],
      "matchPackagePatterns": ["ecto", "phoenix", "plug"],
      "groupName": "Core Phoenix Dependencies"
    },
     {
      "matchManagers": ["mix"],
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
        {
      "matchManagers": ["npm"],
      "groupName": "JS Dependencies"
    }
  ],
  "rebaseWhen": "never",
  "ignorePaths": ["**/node_modules/**"]
}
